<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Image="/images/default-user.jpg" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">@User.Email</MudText>
            <MudText Typo="Typo.caption">@User.Name</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

